<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="360dp"
    android:height="280dp"
    android:viewportWidth="360"
    android:viewportHeight="280">
  
  <!-- Main Background -->
  <path
      android:pathData="M0,0h360v280H0z"
      android:fillColor="#1A237E"/>
  
  <!-- Blurred Circle (Simulated with Radial Gradient) -->
  <!-- Center at approx top-right, huge radius -->
  <path
      android:pathData="M200,-100 a300,300 0 1,0 600,0 a300,300 0 1,0 -600,0">
    <aapt:attr name="android:fillColor">
      <gradient 
          android:centerX="410"
          android:centerY="-50"
          android:gradientRadius="320"
          android:type="radial">
        <item android:offset="0.0" android:color="#80283593"/>
        <item android:offset="1.0" android:color="#00283593"/>
      </gradient>
    </aapt:attr>
  </path>

  <!-- Gradient Overlay (Vertical) -->
   <path
      android:pathData="M0,0h360v280H0z">
    <aapt:attr name="android:fillColor">
      <gradient 
          android:startY="0"
          android:endY="280"
          android:type="linear">
        <item android:offset="0.0" android:color="#33304FFE"/>
        <item android:offset="1.0" android:color="#00304FFE"/>
      </gradient>
    </aapt:attr>
  </path>

  <!-- Angled Shape (Rotated Rect) -->
  <group android:rotation="45" android:pivotX="150" android:pivotY="80">
      <path
        android:pathData="M0,-70 h300 v300 h-300 z"
        android:fillColor="#0DFFFFFF"/>
  </group>

</vector>
